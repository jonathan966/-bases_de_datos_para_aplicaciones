
create table ventas (
id_venta INT NOT NULL PRIMARY KEY,
fecha_venta TIMESTAMP,
total_venta float,
id_cliente int,
FOREIGN KEY (id_cliente) REFERENCES clientes(id_cliente),
)engine=INNODB;   


